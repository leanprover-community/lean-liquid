    simp_rw [comp_apply],
    congr' 1,
    dsimp [functor.preimage, yoneda'_equiv, full.preimage, AddCommGroup.adj, ulift_functor],
    change (free_abelian_group.lift id) (_ <$> free_abelian_group.of _) = _,
