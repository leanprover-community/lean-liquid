    set m_T : normed_group_hom (locally_constant X V) (locally_constant X V) := map_hom T.inv,
    set G := he.g hœÜ f,
    set H := he.h hœÜ f,
    change m_T _ - _ = _,
    rw sub_eq_iff_eq_add at ih,
    dsimp [embedding.g, embedding.h],
    change m_T (c_e ‚àë i in range (N.succ + 1), H i) -
