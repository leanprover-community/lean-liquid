    let b : X ‚ü∂ Y := inv P.cokernel_to ‚â´ cokernel.desc _ q' _,
    swap,
    { dsimp [q'], change P.bhc.val.as.d (-1) 0 ‚â´ _ = _, rw ‚Üê q.comm,
      convert zero_comp,
      apply is_zero.eq_of_tgt,
      exact is_zero_zero _ },
    use b,
    rw ‚Üê homotopy_category.quotient_map_out a,
    erw ‚Üê (homotopy_category.quotient _ _).map_comp,
    congr' 1, change _ = q, ext ((_|i)|i),
    { change _ = q',
      simp only [iso.app_hom, functor.map_comp, functor.map_inv, category.assoc,
        homological_complex.comp_f, homological_complex.single_map_f,
        int.of_nat_eq_coe, int.coe_nat_zero, eq_self_iff_true, eq_to_hom_refl,
        category.comp_id, category.id_comp, dite_eq_ite, if_true],
      change P.œÄ.f 0 ‚â´ _ = _,
      simp_rw [‚Üê category.assoc],
      let t := _, change t ‚â´ _ = _,
      have ht : t = cokernel.œÄ  _,
      { dsimp [t],
        rw [‚Üê functor.map_inv, ‚Üê as_iso_inv, ‚Üê functor.map_iso_inv],
        let w := (homological_complex.single A
          (complex_shape.up ‚Ñ§) 0).map_iso (as_iso P.cokernel_to),
        change (P.œÄ.f 0 ‚â´ _) ‚â´
          ((homological_complex.eval _ _ 0).map_iso w).inv = _,
        rw iso.comp_inv_eq,
        dsimp [chain_complex.single‚ÇÄ_comp_embed_iso_single,
          chain_complex.single‚ÇÄ_comp_embed_iso_single_component],
        simp only [eq_self_iff_true, category.comp_id, category.id_comp, if_true],
        dsimp [cokernel_to],
        simp only [cokernel.œÄ_desc],
        change _ ‚â´ (iso.refl _).hom = _,
        simp only [iso.refl_hom, category.comp_id] },
